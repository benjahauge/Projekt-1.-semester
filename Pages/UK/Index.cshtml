@page
@inject Projekt.Interfaces.IRepository repository
@model Projekt.Pages.UK.IndexModel
@{
	ViewData["Title"] = "UK";
}

<h1> Githuub</h1>
<div>
	<ul>
		<li> Der er @repository.GetAllKursus().Count tilgængelige kursus</li>
	</ul>
</div>

<form>
	<p>
		Search: <input type="text" asp-for="FilterCriteria" />
		<input type="submit" value="Filter" />
	</p>
</form>

<div class="container">
	<div class="row">
		@foreach (var k in Model.Kursuss)
		{

			<div class="col-sm">
				<div class="card" style="width: 30rem;">
					<img class="card-img-top" src="~/img/Fjordstjernen.jpg" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">@k.Navn</h5>
						<p class="card-text">@k.Beskrivelse</p>
						<a asp-page="Tilmeld" asp-route-id="@k.ID" class="btn btn-primary">Tilmeld</a>
						<a asp-page="Afmeld" asp-route-id="@k.ID" class="btn btn-danger">Afmeld</a>
					</div>
				</div>
				<br />
			</div>

		}
	</div>
</div>


